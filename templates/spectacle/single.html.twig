{% extends 'base.html.twig' %}



{% block title %}{{ spectacle.titre }} | Derviche Diffusion{% endblock %}



{% block body %}

<div class="container hauteurMin">

    <a class="btn btn-outline-info mt-4" href="{{ path('app_spectacle_index') }}">Retour à la liste de spectacle</a>



    <h6 class="mt-5 text-secondary">{{ spectacle.nomCie }}</h6>

    <h2 class="">{{ spectacle.titre }}</h2>
    <hr size="4" width="100%">

    <div class="text-center">
        <img  class="my-5 img-fluid" src="{{ asset('images/spectacles/' ~ spectacle.image1) }}" alt="">
    </div>



    <div class="row">
        <div class="col-md-4 textaside mt-5">
            {% if spectacle.urlVideo is not empty %}
                <p class="link">
                    <a class="link" href="{{ spectacle.urlVideo }}" target="_blank"><i class="fas fa-video"></i> Teaser du spectacle</a>
                </p>
            {% endif %}

            {% if spectacle.siteCie is not empty %}
            <p class="link">
                <a class="link" href="{{ spectacle.siteCie }}" target="_blank"><i class="fas fa-window-restore"></i> Site de la compagnie</a></p>
            {% endif %}

            <p class="link">
                <a class="link" href="mailto:{{ spectacle.mailContact }}?subject={{ spectacle.titre }} - demande d'informations en ligne"><i class="fas fa-envelope"></i> Contactez-nous</a>
            </p>
                {% if spectacle.dossier is not empty %}
            <p class="link">
                <a class="link" href="{{ spectacle.dossier }}" target="_blank"><i class="fas fa-file-pdf"></i> Télécharger le dossier du spectacle</a>
            </p>
                {% endif %}
                {% if spectacle.dossierPeda is not empty %}
            <p class="link">
                <a class="link" href="{{ spectacle.dossierPeda }}" target="_blank"><i class="fas fa-file-pdf"></i> Télécharger le dossier du spectacle pédagogique</a>
            </p>
                {% endif %}

            <hr width="80%" align=left>


            <p><strong>Catégorie :</strong>

                {% for categ in spectacle.categorie %}
                    {{ categ }},
                {% endfor %}

                {% if spectacle.sousCategorie is not empty %}
                     {{ spectacle.sousCategorie }},
                {% endif %}
                {% if spectacle.sousCategoriePersonalise is not empty %}
                 {{ spectacle.sousCategoriePersonalise }}</p>
            {% endif %}
            <p>Spectacle  <strong>{{ spectacle.spectateur }}</strong>
                {% if spectacle.ageSpectateurs is not empty %}
                    à partir de {{ spectacle.ageSpectateurs }} ans
                {% endif %}
                </p>
            {% if spectacle.duree is not empty %}
                <p><strong>Durée :</strong> {{ spectacle.duree }} minutes</p>

            {% endif %}
            <p>Compagnie basé en {{ spectacle.pays }} (Département : {{ spectacle.departement }})</p>
            </p>
        </div>

        <div class="col-md-8 text-single">
            <h3 class="teal my-5">A propos : </h3>
            <p>{{ spectacle.resume|raw }}</p>

            {% if spectacle.texteComplementaire is not empty %}
                <p>{{ spectacle.texteComplementaire|raw }}</p>
            {% endif %}

            {% if spectacle.noteMiseEnScene is not empty %}
                <h3 class="teal my-5">Notes : </h3>
                <p>{{ spectacle.noteMiseEnScene|raw }}</p>
            {% endif %}

            {% if spectacle.atelier is not empty %}
                <h3 class="teal my-5">Atelier : </h3>
                <p>{{ spectacle.atelier|raw }}</p>
            {% endif %}

            {% if spectacle.coproduction is not empty %}
                <h3 class="teal my-5">Coproduction : </h3>
                <p>{{ spectacle.coproduction|raw }}</p>
            {% endif %}

            {% if spectacle.enSavoirPlus is not empty %}
                <h3 class="teal my-5">En savoir plus : </h3>

                <p>{{ spectacle.enSavoirPlus|raw }}</p>
            {% endif %}

            {% if spectacle.representations is not empty %}
                <h3 class="teal my-5">Representations : </h3>
                <p>{{ spectacle.representations|raw }}</p>
            {% endif %}





            {% if spectacle.enPratique is not empty %}
                <h3 class="teal my-5">En pratique : </h3>
                <p>{{ spectacle.enPratique|raw }}</p>
            {% endif %}

            {% if spectacle.enTournee is not empty %}
                <p><strong>En tournée : </strong>{{ spectacle.enTournee|raw }}</p>
            {% endif %}

            {% if spectacle.dimensionsPlateau is not empty %}
                <p><strong>Dimensions plateau : </strong>{{ spectacle.dimensionsPlateau }}</p>

            {% endif %}
        </div>


    </div>











</div>

{% endblock %}




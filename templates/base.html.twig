<!DOCTYPE html>
<html lang=fr>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Derviche Diffusion{% endblock %}</title>
        <meta name="description" content="Une structure de diffusion accessible, transparente et mutualiste. Comme les derviches tourneurs, tous les spectacles vivants ont besoin de tourner pour vivre et grandir !">
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

        {% block stylesheets %}

            <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css') }}">
            <link rel="stylesheet" href="{{ asset('css/main.css') }}">
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">

            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

            <noscript><link rel="stylesheet" href="{{ asset('css/noscript.css') }}"></noscript>


        {% endblock %}
    </head>

    <body class="is-preload">

    <!-- utilisateur connecté == ROLE_ADMIN  -->
    {% if is_granted('ROLE_ADMIN') %}
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container navbar-nav">
                <a class="navbar-brand" href="#">
                    Admin
                </a>
                <div class="navbar-collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Gestion équipe
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Gestion des catégories
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#}">
                                Gestion des spectacles
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Gestion des lieux
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    {% endif %}

    <!-- Header -->
    <header id="header">
        <h1>Derviche Diffusion</h1>
        <nav>
            <ul>
                <li><a href="#intro">Accueil</a></li>
                <li><a href="#services">Nos services</a></li>
                <li><a href="#">Nos spectacles</a></li>
                <li><a href="#two">FAQ</a></li>
                <li><a href="#contact">Contact</a></li>
                <li><a href="#">Se connecter/S'inscrire</a></li>

            </ul>
        </nav>
    </header>




        {% block body %}{% endblock %}



    <footer id="footer">
        <a href="#intro" class="button style2 down anchored rotation"></a>
        <ul class="menu">
            <li><a href="#">Mentions légales</a></li>
            <li><a href="#">Politique de confidentialité</a></li>
            <li><a href="{{ path('app_security_login') }}">Admin</a></li>
        </ul>


    </footer>
        {% block javascripts %}

            <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
            <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
            <script src="{{ asset('js/jquery.poptrox.min.js') }}"></script>
            <script src="{{ asset('js/jquery.scrolly.min.js') }}"></script>
            <script src="{{ asset('js/jquery.scrollex.min.js') }}"></script>
            <script src="{{ asset('js/browser.min.js') }}"></script>
            <script src="{{ asset('js/breakpoints.min.js') }}"></script>
            <script src="{{ asset('js/util.js') }}"></script>
            <script src="{{ asset('js/function.js') }}"></script>



            <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>

            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
